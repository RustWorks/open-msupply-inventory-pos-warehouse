{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Encounter": {
      "properties": {
        "encounterDatetime": {
          "description": "Encounter date and time",
          "format": "date-time",
          "type": "string"
        },
        "status": {
          "enum": ["Scheduled", "Ongoing", "Done", "Canceled", "Missed"],
          "type": "string"
        }
      },
      "required": ["encounterDatetime", "status"],
      "type": "object"
    }
  },
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/Encounter"
    }
  ]
}
