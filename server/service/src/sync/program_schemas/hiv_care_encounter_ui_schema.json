{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Label",
      "text": "Encounter",
      "variant": "h1"
    },
    {
      "type": "Control",
      "scope": "#/properties/startDatetime"
    },
    {
      "type": "Control",
      "scope": "#/properties/endDatetime"
    },
    {
      "type": "Control",
      "scope": "#/properties/practitioner"
    },
    {
      "type": "Control",
      "scope": "#/properties/status"
    },
    {
      "type": "EncounterLineChart",
      "scope": "#",
      "options": {
        "values": [
          {
            "field": "physicalExamination.weight",
            "label": "Weight",
            "unit": "kg"
          }
        ]
      }
    },
    {
      "type": "EncounterLineChart",
      "scope": "#",
      "options": {
        "values": [
          {
            "field": "physicalExamination.bloodPressure",
            "label": "Blood Pressure",
            "unit": "mmHg"
          }
        ]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/arvMedication/properties/pillCount"
    },
    {
      "type": "DispensedDuration",
      "scope": "#",
      "label": "Number Of Days Dispensed",
      "options": {
        "targetField": "numberOfDaysDispensed",
        "baseDatetimeField": "startDatetime",
        "scheduleEventsNow": true,
        "events": [
          {
            "scheduleIn": {
              "days": 0,
              "minutes": 1
            },
            "name": "Interrupted",
            "group": "HivCareEncounterDispensingStatus",
            "type": "status"
          },
          {
            "scheduleIn": {
              "days": 0,
              "minutes": 3
            },
            "name": "Lost to follow up",
            "group": "HivCareEncounterDispensingStatus",
            "type": "status"
          }
        ]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/physicalExamination"
    },
    {
      "type": "Control",
      "scope": "#/properties/familyPlanning"
    },
    {
      "type": "Control",
      "scope": "#/properties/arvMedication"
    },
    {
      "type": "Control",
      "scope": "#/properties/riskBehaviour"
    },
    {
      "type": "Control",
      "scope": "#/properties/tuberculosis"
    }
  ]
}
