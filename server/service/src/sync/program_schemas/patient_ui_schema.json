{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Label",
      "text": "${firstName} ${lastName}",
      "variant": "h1"
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Group",
              "label": "Patient Information",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/id",
                  "options": {
                    "readonly": true
                  }
                },
                {
                  "type": "IdGeneratorControl",
                  "label": "NUIC",
                  "scope": "#/",
                  "options": {
                    "targetField": "code",
                    "parts": [
                      {
                        "field": "lastName",
                        "firstNChars": 2,
                        "toUpperCase": true
                      },
                      {
                        "field": ["birthPlace", "district"],
                        "firstNChars": 2,
                        "toUpperCase": true
                      },
                      {
                        "field": "hand",
                        "enumMapping": {
                          "LEFT": "L",
                          "RIGHT": "R"
                        }
                      },
                      {
                        "field": "birthOrder",
                        "firstNChars": 2,
                        "toUpperCase": true
                      },
                      {
                        "field": "gender",
                        "enumMapping": {
                          "MALE": "1",
                          "FEMALE": "2",
                          "TRANSGENDER_MALE": "3",
                          "TRANSGENDER_FEMALE": "3",
                          "UNKNOWN": "3",
                          "NON_BINARY": "3"
                        }
                      },
                      {
                        "field": "firstName",
                        "lastNChars": 2,
                        "toUpperCase": true
                      }
                    ]
                  }
                },
                {
                  "type": "Control",
                  "scope": "#/properties/firstName",
                  "label": "First Name"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/lastName",
                  "label": "Last Name"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/gender"
                },
                {
                  "type": "DateOfBirthControl",
                  "scope": "#/properties/dateOfBirth"
                },
                {
                  "type": "Control",
                  "label": "DOB Estimated",
                  "scope": "#/properties/dateOfBirthIsEstimated"
                },
                {
                  "type": "Control",
                  "label": "Birth District",
                  "scope": "#/properties/birthPlace/properties/district"
                },
                {
                  "type": "Control",
                  "label": "Birth Province",
                  "scope": "#/properties/birthPlace/properties/region"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/birthOrder"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/hand"
                },
                {
                  "type": "FirstItemArrayControl",
                  "scope": "#/properties/contactDetails",
                  "options": {
                    "detail": {
                      "type": "VerticalLayout",
                      "elements": [
                        {
                          "type": "Control",
                          "scope": "/properties/address1"
                        },
                        {
                          "type": "Control",
                          "scope": "/properties/address2"
                        },
                        {
                          "type": "Control",
                          "scope": "/properties/district"
                        },
                        {
                          "type": "Control",
                          "scope": "/properties/phone"
                        },
                        {
                          "type": "Control",
                          "scope": "/properties/mobile"
                        },
                        {
                          "type": "Control",
                          "scope": "/properties/email"
                        }
                      ]
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Group",
              "label": "Demographics",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/family/properties/maritalStatus"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/socioEconomics/properties/education"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/socioEconomics/properties/occupation"
                }
              ]
            },
            {
              "type": "Group",
              "label": "Allergies",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/allergies/properties/drugs"
                }
              ]
            },
            {
              "type": "Group",
              "label": "Family Information",
              "elements": [
                {
                  "type": "Group",
                  "label": "Mother",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/family/properties/mother/properties/firstName"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/family/properties/mother/properties/lastName"
                    },
                    {
                      "type": "FirstItemArrayControl",
                      "scope": "#/properties/family/properties/mother/properties/contactDetails",
                      "options": {
                        "detail": {
                          "type": "VerticalLayout",
                          "elements": [
                            {
                              "type": "Control",
                              "scope": "/properties/phone"
                            },
                            {
                              "type": "Control",
                              "scope": "/properties/mobile"
                            },
                            {
                              "type": "Control",
                              "scope": "/properties/email"
                            }
                          ]
                        }
                      }
                    }
                  ]
                },
                {
                  "type": "Group",
                  "label": "Next of kin",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/family/properties/nextOfKin/properties/firstName"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/family/properties/nextOfKin/properties/lastName"
                    },
                    {
                      "type": "FirstItemArrayControl",
                      "scope": "#/properties/family/properties/nextOfKin/properties/contactDetails",
                      "options": {
                        "detail": {
                          "type": "VerticalLayout",
                          "elements": [
                            {
                              "type": "Control",
                              "scope": "/properties/phone"
                            },
                            {
                              "type": "Control",
                              "scope": "/properties/mobile"
                            },
                            {
                              "type": "Control",
                              "scope": "/properties/email"
                            }
                          ]
                        }
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "Group",
              "label": "Death",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/isDeceased"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/dateOfDeath",
                  "rule": {
                    "effect": "HIDE",
                    "condition": {
                      "scope": "#/properties/isDeceased",
                      "schema": {
                        "const": false
                      }
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
