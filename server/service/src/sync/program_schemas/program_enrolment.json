{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ProgramEnrolment": {
      "properties": {
        "enrolmentDatetime": {
          "description": "Enrolment date and time",
          "format": "date-time",
          "type": "string"
        },
        "programEnrolmentId": {
          "description": "Patient's program id",
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/ProgramEnrolmentStatus",
          "description": "Current status of the program enrolment"
        }
      },
      "required": ["enrolmentDatetime"],
      "type": "object"
    },
    "ProgramEnrolmentStatus": {
      "enum": ["ACTIVE", "OPTED_OUT", "TRANSFERRED_OUT", "PAUSED"],
      "type": "string"
    }
  },
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/ProgramEnrolment"
    }
  ]
}
