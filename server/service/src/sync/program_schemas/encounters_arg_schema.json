        "startDatetime": {
          "description": "Encounter start date and time",
          "format": "date-time",
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/EncounterStatus"
        }
      },
      "required": ["startDatetime", "endDatetime"],
      "type": "object"
    }
  ]
