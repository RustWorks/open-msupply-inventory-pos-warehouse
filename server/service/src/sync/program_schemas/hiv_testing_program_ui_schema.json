{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Header",
      "options": {
        "header": "Enrolment Form",
        "subheader": "HIV Testing and Counselling"
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/enrolmentDatetime",
      "label": "Enrolment Date",
      "options": {
        "dateOnly": true
      }
    },
    {
      "type": "IdGenerator",
      "label": "Enrolment Patient Id",
      "scope": "#/properties/enrolmentPatientId",
      "options": {
        "parts": [
          {
            "type": "StoreName",
            "mutations": [{ "firstNChars": 3 }, { "toUpperCase": true }]
          },
          {
            "type": "Number",
            "numberName": "HIVProgram",
            "mutations": [{ "padString": "0000" }]
          }
        ]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/status",
      "label": "Status:",
      "options": {
        "show": [
          ["ACTIVE", "Active"],
          ["OPTED_OUT", "Opted out"],
          ["TRANSFERRED_OUT", "Transferred out"],
          ["PAUSED", "Paused"]
        ]
      }
    },
    {
      "type": "Group",
      "label": "Notes",
      "elements": [
        {
          "type": "Notes",
          "label": "Patient Notes",
          "scope": "#/properties/notes",
          "options": {
            "editRestrictions": {
              "latest": true,
              "isCurrentUser": true,
              "maxAge": 1
            },
            "reverse": true,
            "defaultExpanded": true
          }
        }
      ]
    }
  ]
}
