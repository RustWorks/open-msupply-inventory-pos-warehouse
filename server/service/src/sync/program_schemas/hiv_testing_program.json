{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "HIVRelation": {
      "properties": {
        "clinic": {
          "type": "string"
        },
        "patientId": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "HIVStatus": {
      "enum": ["POSITIVE", "NEGATIVE", "INCONCLUSIVE"],
      "type": "string"
    },
    "HIVTestingProgramEnrolment": {
      "properties": {
        "enrolmentDatetime": {
          "description": "Enrolment date and time",
          "format": "date-time",
          "type": "string"
        },
        "mother": {
          "$ref": "#/definitions/HIVRelation"
        },
        "notes": {
          "description": "An overall note for additional comments about the program enrolment",
          "items": {
            "$ref": "#/definitions/Note"
          },
          "type": "array"
        },
        "partnerHIVStatus": {
          "$ref": "#/definitions/HIVStatus"
        },
        "programEnrolmentId": {
          "description": "Patient's program id",
          "type": "string"
        },
        "referredFrom": {
          "$ref": "#/definitions/ReferredFrom"
        },
        "status": {
          "$ref": "#/definitions/ProgramEnrolmentStatus",
          "description": "Current status of the program enrolment"
        }
      },
      "required": ["enrolmentDatetime", "status"],
      "type": "object"
    },
    "Note": {
      "properties": {
        "authorId": {
          "description": "authorId should be captured automatically from app state",
          "type": "string"
        },
        "authorName": {
          "description": "Practitioner's \"real\" name. Currently needs to be entered, but would ideally default to local state (but we don't yet have this in the database)",
          "type": "string"
        },
        "created": {
          "description": "Datetime when the note has been created",
          "format": "date-time",
          "type": "string"
        },
        "text": {
          "type": "string"
        }
      },
      "required": ["text"],
      "type": "object"
    },
    "ProgramEnrolmentStatus": {
      "enum": ["ACTIVE", "OPTED_OUT", "TRANSFERRED_OUT", "PAUSED"],
      "type": "string"
    },
    "ReferredFrom": {
      "enum": [
        "HCT_OTHER_PICT",
        "INDEX",
        "LABOUR",
        "POST_NATAL",
        "TB",
        "COMMUNITY",
        "TRANSFER_IN",
        "STI",
        "ANC",
        "EXPOSED_INFANT_WELL_BABY_CLINIC",
        "IN_PATIENT"
      ],
      "type": "string"
    }
  },
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/HIVTestingProgramEnrolment"
    }
  ]
}
