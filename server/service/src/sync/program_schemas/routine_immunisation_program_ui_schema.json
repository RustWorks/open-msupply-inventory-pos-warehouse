{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Header",
      "options": {
        "header": "Enrolment Form",
        "subheader": "Routine Immunisation"
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/enrolmentDatetime",
      "label": "Enrolment Date",
      "options": {
        "dateOnly": true
      }
    },
    {
      "type": "IdGenerator",
      "label": "Patient Program Id",
      "scope": "#/properties/programEnrolmentId",
      "options": {
        "parts": [
          {
            "type": "StoreName",
            "mutations": [{ "firstNChars": 3 }, { "toUpperCase": true }]
          },
          {
            "type": "Number",
            "numberName": "HIVProgram",
            "mutations": [{ "padString": "0000" }]
          }
        ],
        "allowManualEntry": true,
        "validations": [
          {
            "type": "UniqueEnrolmentId"
          }
        ]
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/status"
    },
    {
      "type": "Control",
      "scope": "#/properties/legalGuardianFullName"
    },
    {
      "type": "Control",
      "scope": "#/properties/placeOfBirth"
    },
    {
      "type": "Group",
      "label": "Notes",
      "elements": [
        {
          "type": "Notes",
          "label": "Patient Notes",
          "scope": "#/properties/notes",
          "options": {
            "editRestrictions": {
              "latest": true,
              "isCurrentUser": true,
              "maxAge": 1
            },
            "reverse": true,
            "defaultExpanded": true
          }
        }
      ]
    }
  ]
}
